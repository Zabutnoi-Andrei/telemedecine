<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zveri.telemedicine">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

    <!-- Splash screen -->
    <activity
        android:name="com.example.zveri.telemedicine.SplashScreenActivity"
        android:label="">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- Main activity -->
    <activity
        android:name="com.example.zveri.telemedicine.MainActivity">
    </activity>

	<!-- Login screen -->
	<activity
		android:name="com.example.zveri.telemedicine.LoginActivity">
	</activity>

	<!-- DoctorDetails screen -->
	<activity 
		android:name="com.example.zveri.telemedicine.DoctorDetailsActivity">
	</activity>

    <!-- DoctorList screen -->
    <activity
        android:name="com.example.zveri.telemedicine.DoctorListActivity">
    </activity>

    </application>

</manifest>