<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="2">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="80dp"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Notification"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="20sp"    />


</LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="5.39"
        android:gravity="center"
        android:padding="20dp"
        app:srcCompat="@drawable/ok_img" />

    <TextView
        android:id="@+id/textView_requestApproved"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/textView_requestApproved"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/textView_loremIpsum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="17dp"
        android:text="@string/textView_lorem"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView_reqDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/textView_reqDetails"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:text="Name"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textView_nameFromHomeScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="nameFromHomeScreen"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textView_desease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:text="Desease"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textView_deseaseFromHomeScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="deseaseFromHomeScreen"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textView_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:text="Location"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textView_locationFromHomeScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="locationFromHomeScreen"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textView_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="5dp"
        android:text="Description"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textView_descriptionFromHomeScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="descriptionFromHomeScreen"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/textView_docDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Doctor"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"

        android:background="@drawable/doctor_details_frame"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/docPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="20dp"
            app:srcCompat="@drawable/doctor_avatar" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_docNameFromApi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor name from API"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/textView_docSpecialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctor specialization from API"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/star_empty" />
                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/star_empty" />
                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/star_empty" />
                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/star_empty" />
                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/star_empty" />
                <TextView
                    android:id="@+id/textView_ratingFromApi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rate"
                    android:padding="10dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />
        </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_entry"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:onClick=""
        android:text="Confirm" />
    <Button
        android:id="@+id/cancelRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_entry"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:text="Cancel Request" />

</LinearLayout>
</ScrollView>

<LinearLayout
android:orientation="horizontal"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:layout_constraintBottom_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_alignParentBottom="true"

        android:gravity="center">


    <ImageButton
        android:id="@+id/homeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:srcCompat="@drawable/home_icon" />
    <ImageButton
        android:id="@+id/notifIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/notif_icon_sel" />

    <ImageButton
        android:id="@+id/addIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/add_icon" />

    <ImageButton
        android:id="@+id/scheduleIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/schedule_icon" />
    <ImageButton
        android:id="@+id/profileIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/profile_icon" />

</LinearLayout>
    </RelativeLayout>