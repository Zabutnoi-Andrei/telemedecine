<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="2">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:text="Doctor Details"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"

                    android:background="@drawable/doctor_details_frame"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/docPhoto"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="20dp"
                        app:srcCompat="@drawable/doctor_avatar" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:gravity="center"
                        android:padding="20dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView_docNameFromApi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Doctor name from API"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/textView_docSpecialization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Doctor specialization from API"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/star1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                app:srcCompat="@drawable/star_empty" />
                            <ImageView
                                android:id="@+id/star2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                app:srcCompat="@drawable/star_empty" />
                            <ImageView
                                android:id="@+id/star3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                app:srcCompat="@drawable/star_empty" />
                            <ImageView
                                android:id="@+id/star4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                app:srcCompat="@drawable/star_empty" />
                            <ImageView
                                android:id="@+id/star5"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                app:srcCompat="@drawable/star_empty" />
                            <TextView
                                android:id="@+id/textView_ratingFromApi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="rate"
                                android:padding="10dp"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="15sp" />
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/textView_requestApproved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Short Description"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView_loremIpsum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="17dp"
                    android:text="@string/textView_lorem"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="20dp"
                    android:text="Location"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="67dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:src="@drawable/location" />

                    <TextView
                        android:id="@+id/textView_locationFromHomeScreen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="locationFromHomeScreen"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="15sp" />
                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="268dp"
                    android:src="@drawable/map_img" />

                <Button
                    android:id="@+id/confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/custom_entry_green"
                    android:text="Request"
                    android:textColor="#ffffff" />


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_alignParentBottom="true"

            android:gravity="center">


            <ImageButton
                android:id="@+id/homeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:srcCompat="@drawable/home_icon" />
            <ImageButton
                android:id="@+id/notifIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@android:color/white"
                app:srcCompat="@drawable/notif_icon_sel" />

            <ImageButton
                android:id="@+id/addIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@android:color/white"
                app:srcCompat="@drawable/add_icon" />

            <ImageButton
                android:id="@+id/scheduleIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@android:color/white"
                app:srcCompat="@drawable/schedule_icon" />
            <ImageButton
                android:id="@+id/profileIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@android:color/white"
                app:srcCompat="@drawable/profile_icon" />

        </LinearLayout>
    </RelativeLayout>